#include "./includes/client.h"



void send_bit(char c, pid_t pid)
{
	if (c == '1')
		kill(pid, SIGUSR1);
	if (c == '0')
		kill(pid, SIGUSR2);
}

void send_char(char *c_bin, pid_t pid, int *received)
{
	int i;

	i = 0;
	while (i < 8)
	{
		while (1)
		{
			send_bit(c_bin[i], pid);
			pause();
			if (received == 1)
				break;
		}
		received = 0;
		i++;
	}
}

void send_str(char **str, pid_t pid, int *received)
{
	int i;

	i = 0;
	while (str[i])
		send_char(str[i++], pid, received);
	//send_char('\0', pid);
}